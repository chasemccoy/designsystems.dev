    "postcss-import": "^12.0.1",
    "prettier": "1.18.2",
    "tailwindcss": "^1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chasemccoy/designsystems.dev"
  },
  "bugs": {
    "url": "https://github.com/chasemccoy/designsystems.dev/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ]
