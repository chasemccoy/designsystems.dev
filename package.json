{
  "name": "designsystems.dev",
  "private": false,
  "description": "",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:svelte && yarn build:css && yarn build:11ty",
    "build:11ty": "eleventy",
    "build:css": "postcss src/_styles/index.css -o src/_includes/css/styles.css",
    "build:svelte": "rollup -c",
    "start": "concurrently -n 11ty,css,svelte yarn:watch:11ty yarn:watch:css yarn:watch:svelte",
    "watch:11ty": "eleventy --serve",
    "watch:css": "postcss src/_styles/index.css -o src/_includes/css/styles.css --watch",
    "watch:svelte": "rollup -c -w"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "autoprefixer": "^9.7.4",
    "concurrently": "^5.1.0",
    "cssnano": "^4.1.10",
    "husky": "3.0.8",
    "lint-staged": "9.4.1",
    "postcss": "^7.0.27",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "prettier": "^1.19.1",
    "resetti": "^1.1.1",
    "rollup": "^1.31.1",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.2.0",
    "svelte": "^3.18.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chasemccoy/designsystems.dev"
  },
  "bugs": {
    "url": "https://github.com/chasemccoy/designsystems.dev/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
